{
  "scripts": {
    "postinstall": "install-app-deps",
    "build-ui": "webpack --target=web",
    "build-app": "webpack --target=electron",
    "dev": "webpack-dev-server --port 8090 --inline --hot --content-base ./app/",
    "unit": "karma start test/karma.conf.js --single-run",
    "unit-main": "mocha test/main/",
    "e2e": "cross-env ENABLE_VIRTUAL_SMOOTHIE=true mocha --timeout 60000 test/e2e/integration_test.js",
